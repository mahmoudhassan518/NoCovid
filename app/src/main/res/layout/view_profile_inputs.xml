<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/fields_container_LinearLayoutCompat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_welcome_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profileWelcomeMessage"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/profileMessage"
                android:fontFamily="@font/roboto_regular"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/white" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_name"
                style="@style/ProfileTextView"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/ic_user"
                android:drawablePadding="8dp"
                android:hint="@string/name"
                android:inputType="text"
                android:maxLength="30"
                android:maxLines="1"
                android:textAlignment="viewStart" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_email"
                style="@style/ProfileTextView"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/ic_baseline_email_24"
                android:drawablePadding="8dp"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:maxLength="30"
                android:maxLines="1"
                android:textAlignment="viewStart" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_phone"
                style="@style/ProfileTextView"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="8dp"
                android:hint="@string/phoneNumber"
                android:inputType="phone"
                android:maxLength="15"
                android:maxLines="1"
                android:textAlignment="viewStart" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_address"
                style="@style/ProfileTextView"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/ic_address"
                android:drawablePadding="8dp"
                android:hint="@string/address"
                android:inputType="text"
                android:maxLength="50"
                android:maxLines="1"
                android:textAlignment="viewStart" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_age"
                style="@style/ProfileTextView"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/ic_age"
                android:drawablePadding="8dp"
                android:hint="@string/age"
                android:inputType="number"
                android:maxLength="2"
                android:maxLines="1"
                android:textAlignment="viewStart" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btn_save"
                style="@style/PrimaryButton"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_enabled_button"
                android:text="@string/save"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>