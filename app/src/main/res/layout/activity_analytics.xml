<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".modules.analytics.presentation.view.AnalyticsActivity">

        <include
            android:id="@+id/action_bar_back"
            layout="@layout/action_bar_back_dark" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_upload_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dashed_border"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:textSize="16sp"
            android:text="@string/newAnalysis"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/action_bar_back" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_upload_image">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_analytics"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:listitem="@layout/item_analytics" />

                <include
                    android:id="@+id/layout_state_view"
                    layout="@layout/layout_state_view" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>