<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UntiCovid" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPeaGreen</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="android:textColorHighlight">@color/colorPrimary</item>
    </style>

    <style name="Theme.UntiCovid.NoActionBar.FullScreen" parent="Theme.UntiCovid">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.UntiCovid.ActionBarStatusBarTransparent" parent="Theme.UntiCovid">
        <!--         Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorTransparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Status bar transparent. -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:background">@null</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

</resources>