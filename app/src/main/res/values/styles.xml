<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ProfileTextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/bg_text_view</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_width">418dp</item>
        <item name="android:layout_height">@dimen/dimen_field_height</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>

    </style>


    <style name="UserProfileChangePasswordTextView" parent="ProfileTextView">
        <item name="android:paddingTop">@dimen/dimen_password_padding_top</item>
        <item name="android:paddingBottom">@dimen/dimen_password_padding_bottom</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:maxLines">1</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dimen_field_height</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="loadingProgress" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="StylePageTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>

    </style>

</resources>